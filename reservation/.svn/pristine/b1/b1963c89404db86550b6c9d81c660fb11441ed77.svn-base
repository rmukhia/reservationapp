<div class="container ">
<div class="page-header page-header_border">
    <h1>Calendar <small>Reserve Chassis</small></h1>
</div>

<!-- First panel for the chassis and blade  -->
<div class="panel panel-default">
    <div class="panel-body">
        <form action="" role="form" ng-submit="submit.add();">
            <legend>Records</legend>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<!-- Select button for chasis -->  
                    <fieldset class="form-group">
                        <label class="col-sm-2 control-label">Chassis:</label>
                        <div class="col-sm-10">
                            <select ng-model="submit.selected_chassis" class="
                            form-control" ng-options="chassis as chassis.name for chassis in submit.chassis_list" required="true"></select>
                        </div>
                    </fieldset>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

<!-- Select Button for Blades -->
                <fieldset class="form-group">
                        <label class="col-sm-2 control-label">Blade:</label>
                        <div class="col-sm-10">
                            <select ng-model="submit.selected_blade" class="form-control" ng-options="blade as blade.name for blade in submit.blade_list | filter : submit.selected_chassis.url" required="true"></select>
                        </div>
                    </fieldset>
                </div>
                 <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<!-- Date Field -->
                <fieldset class="form-group">
                    <label class="col-sm-2 control-label">Date :</label>
                    <div class="col-sm-10">
                        <button type="button" class="btn btn-default btn-md col-sm-2" ng-click="submit.date_increase_decrease(-1)">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Prev
                        </button>
                            <span class="text col-sm-4"><b>&nbsp;&nbsp;&nbsp;&nbsp;{{submit.current_date | get_Date }}</b></span>
                        <button type="button" class="btn btn-default btn-md col-sm-2" ng-click="submit.date_increase_decrease(1)">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> Next
                        </button>
                    </div>
                </fieldset>
            </div>
        </div>
</form>

<!-- Add Button -->
         <div class="col-sm-12" style="text-align:right;">
            <button type="button" class = "btn btn-primary" ng-click="submit.add_blade()"><span class="glyphicon glyphicon-plus"></span>&nbsp; View</button>
         </div>

</div>
</div>
<!-- End of first panel -->



<custom-calendar-row></custom-calendar-row>


</div>
